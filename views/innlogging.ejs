<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brukest√∏tte</title>
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('_nav', { user: user }) %>

    <h2>Logg inn</h2>

    <!-- Display error message if it exists -->
    <% if (typeof error !== 'undefined') { %>
        <div class="error-message"><%= error %></div>
    <% } %>

    <form action="/login" method="post">
        <h2>Email</h2>
        <input type="email" placeholder="Skriv inn e-post" name="email" id="email" required>
        <h2>Passord</h2>
        <input type="password" placeholder="Skriv inn passord" name="password" id="password" required>
        <input type="submit" value="Logg inn">
    </form>
    <a href="/signinn">Sign inn</a>
</body>
</html>
