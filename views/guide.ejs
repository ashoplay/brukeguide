<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guide</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <div class="gridcontainer">
        <aside class="aside">
            <a href="/">Logo</a>
            <a href="/guide">Guide</a>
            <a href="/login">Logg inn</a>
            <ul>
                <% guides.forEach(guide => { %>
                    <li><a href="#<%= guide.tag %>"><%= guide.title %></a></li>
                <% }) %>
            </ul>
        </aside>

        <main class="maincontainer">
            <h1>Guide</h1>

            <% guides.forEach(guide => { %>
                <section>
                    <h2 id="<%= guide.tag %>"><%= guide.title %></h2>
                    <% guide.sections.forEach(section => { %>
                        <h3><%= section.overskrift %></h3>
                        <p><%= section.beskrivelse %></p>
                        <% if (section.bilde) { %>
                            <img src="/uploads/<%= section.bilde %>" alt="<%= section.overskrift %>" />
                        <% } %>
                    <% }) %>
                </section>
            <% }) %>

        </main>
    </div>
</body>
</html>
