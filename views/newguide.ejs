<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ny Guide</title>
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <nav>
        <a href="/">Logo</a>
        <a href="/guide">Guide</a>
        <a href="/login">Logg inn</a>
    </nav>
    <h1>Lag en ny guide</h1>
    
    <form action="" method="post" id="formcontainer" enctype="multipart/form-data">
        <input name="title" placeholder="Tittel" type="text">
        <input name="tag" placeholder="Tag" type="text">
        
        <div id="addnewsection">
            <h2>Seksjon</h2>
            <input name="overskrift" placeholder="Overskrift" type="text">
            <textarea name="beskrivelse" placeholder="Beskrivelse"></textarea>
            <input type="file" name="bilde" accept="image/*">
        </div>
        
        <button type="button" onclick="lagnyseksjon()">Legg til ny seksjon</button>
        <button type="submit">Send inn</button>
    </form>

    <script>
        function lagnyseksjon() {
            const newSection = document.createElement('div');
            newSection.innerHTML = `
                <h2>Seksjon</h2>
                <input name="overskrift" placeholder="Overskrift" type="text">
                <textarea name="beskrivelse" placeholder="Beskrivelse"></textarea>
                <input type="file" name="bilde" accept="image/*">
            `;
            document.getElementById('addnewsection').appendChild(newSection);
        }
    </script>
</body>
</html>
