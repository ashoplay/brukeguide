<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rediger Guide</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <nav>
        <a href="/">Logo</a>
        <a href="/guide">Guide</a>
        <a href="/login">Logg inn</a>
    </nav>

    <h1>Rediger Guide: <%= guide.title %></h1>

    <form action="/guide/<%= guide._id %>/edit" method="POST" enctype="multipart/form-data">
        <label for="title">Tittel:</label>
        <input type="text" name="title" value="<%= guide.title %>" required>

        <label for="tag">Tag:</label>
        <input type="text" name="tag" value="<%= guide.tag %>">

        <h2>Seksjoner:</h2>
        <% guide.sections.forEach((section, index) => { %>
            <div>
                <label for="overskrift">Overskrift:</label>
                <input type="text" name="overskrift" value="<%= section.overskrift %>" required>
                
                <label for="beskrivelse">Beskrivelse:</label>
                <textarea name="beskrivelse" required><%= section.beskrivelse %></textarea>

                <% if (section.bilde) { %>
                    <img src="/<%= section.bilde %>" alt="<%= section.overskrift %>" style="max-width: 100px;">
                <% } %>

                <label for="bilde">Last opp bilde:</label>
                <input type="file" name="bilde">
            </div>
        <% }) %>

        <button type="submit">Lagre endringer</button>
    </form>
</body>
</html>
